{% extends 'application.njk' %}

{% block layout %}
  {% include 'partials/page-heading.njk' %}
  {# include 'partials/breadcrumbs.njk' #}
  <div class="dsRow">
    <div class="dsPage dsCol-12-xs dsCol-9-md dsOrder-2-xs dsOrder-1-md">
      <div class="dsPage__body">
        {% block content %}
          {# page content goes here #}
        {% endblock %}

        <section>
          <h2 class="dsSectionHeading" id="attributes">Attributes</h2>
          <p>
            Attributes allow you to configure the element in a declarative manner.
          </p>
          {% block attributes %}
            <p>
              <ds-icon type="info-circle"></ds-icon>
              This element does not have any configurable attributes.
            </p>
          {% endblock %}
        </section>

        <section>
          <h2 class="dsSectionHeading" id="properties">Properties</h2>
          <p>
            Properties allow you to configure the element in an imperative manner.
          </p>
          {% block properties %}
            <p>
              <ds-icon type="info-circle"></ds-icon>
              This element does not have any exposed properties.
            </p>
          {% endblock %}
        </section>

        <section>
          <h2 class="dsSectionHeading" id="functions">Functions</h2>
          <p>
            Functions alllow you to trigger complex behavior in an element.
          </p>
          {% block functions %}
            <p>
              <ds-icon type="info-circle"></ds-icon>
              This element does not have any exposed functions.
            </p>
          {% endblock %}
        </section>

        <section>
          <h2 class="dsSectionHeading" id="compatibility">Compatibility</h2>
          {% include 'partials/compat-table.njk' %}
          {% block compatibility %}
            {# reserve for additional compatibility notes #}
          {% endblock %}
        </section>
      </div>
      {% include 'partials/page-footer.njk' %}
    </div>
    <div class="dsSidebar dsCol dsCol-12-xs dsCol-3-md dsOrder-1-xs dsOrder-2-md">
      <h6 class="dsLabel">On this page:</h6>
      <aside class="article-toc" role="navigation">
        {{ page.raw | toc | safe }}
        <a href="#attributes">Attributes</a>
        <a href="#properties">Properties</a>
        <a href="#functions">Function</a>
        <a href="#compatibility">Compatibility</a>
        <hr />
        <a class="top-link" href="#top">Back to Top</a>

      </aside>
    </div>
  </div>
{% endblock %}
